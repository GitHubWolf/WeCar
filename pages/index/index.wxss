/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

.pagebody {
  width: 100%;
  height: 100%;  
}

.pagebody scroll-view{
  width: 100%;
  height: 100%;
}


.pagebody scroll-view swiper{
  width: 100%;
  height: 200px;
}

.image_view {
  display: flex;
  justify-content: center;
  height: 200px;
}

.entry_items {
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: space-around;
    flex-wrap: wrap;
}

.entry_item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: auto;
    width: 100rpx;
}

.entry_image {
    width: 96rpx;
    height: 96rpx;
    margin-top: 15rpx
}

.entry_text {
    font-size: 18px;
    align-content: flex-end;
    margin-top: 15rpx;
    margin-bottom: 15rpx
}


.news_item{
  font-size: 12px;
  color: blue;
  border-bottom: 1px solid #dadada;
}